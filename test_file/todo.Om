सूची = [];

मुख्यं कार्यं आरभत।
    लिख "॥ कार्य-सूची प्रबंधन अनुप्रयोगः आरभते ॥";

    कार्यं चक्रं आरभत।
        लिख "\nविकल्पाः:";
        लिख "1. नवीनं कार्यं योजयतु";
        लिख "2. सर्वाणि कार्याणि दर्शयतु";
        लिख "3. कार्यं निष्कासयतु";
        लिख "4. निर्गच्छतु";

        लिख "विकल्पं चिनोतु (1-4): ";
        विकल्पं = इनपुटं();

        यदि विकल्पं == "1" तर्हि
            लिख "कृपया कार्यं नाम लिखतु: ";
            कार्यं = इनपुटं();
            सूची.योजय(कार्यं);
            लिख "कार्यं सफलतया योजितम्।";
        अन्यथा यदि विकल्पं == "2" तर्हि
            यदि सूची.लम्बं() == 0 तर्हि
                लिख "सूच्यां किमपि कार्यं नास्ति।";
            अन्यथा
                लिख "वर्तमान कार्य-सूची:";
                सूच्याः प्रत्येकं कार्यं चक्रं आरभत।
                    लिख "- ", कार्यं;
                समाप्तं चक्रं;
            समाप्तं;
        अन्यथा यदि विकल्पं == "3" तर्हि
            लिख "कृपया निष्कास्य कार्यं संख्या लिखतु (0 आरभ्य): ";
            क्रमांकः = पूर्णांकं(इनपुटं());
            यदि क्रमांकः < सूची.लम्बं() तर्हि
                सूची.निष्कासय(क्रमांकः);
                लिख "कार्यं निष्कासितम्।";
            अन्यथा
                लिख "अमान्यं क्रमांकः।";
            समाप्तं;
        अन्यथा यदि विकल्पं == "4" तर्हि
            लिख "धन्यवादः! बहिः गच्छाम।";
            विरम;
        अन्यथा
            लिख "अमान्यः विकल्पः। कृपया पुनः प्रयतस्व।";
        समाप्तं;
    समाप्तं चक्रं;
समाप्तं कार्यं।
